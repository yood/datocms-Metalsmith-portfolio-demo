{
  "name": "creative-inc",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build:metalsmith": "NODE_ENV=production node index.js",
    "build:assets": "NODE_ENV=production webpack -p --config webpack.prod.config.js",
    "build:datocms": "dato dump",
    "build": "npm run build:datocms && npm run build:metalsmith && npm run build:assets",
    "start:assets": "NODE_ENV=development webpack-dev-server --open --content-base build/ --config webpack.dev.config.js",
    "start:metalsmith": "NODE_ENV=development node index.js",
    "start:datocms": "dato dump --watch",
    "start": "dato check && concurrently -p \"[{name}]\" -c \"blue,red,yellow\" -k -n metalsmith,webpack,datocms \"npm run start:metalsmith\" \"npm run start:assets\" \"npm run start:datocms\""
  },
  "dependencies": {
    "imagesloaded": "^4.1.1",
    "lory.js": "^2.2.1",
    "masonry-layout": "^4.1.1",
    "scroll-lazy": "^1.0.3"
  },
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.9",
    "babel-preset-es2015": "^6.18.0",
    "concurrently": "^3.1.0",
    "css-loader": "^0.26.1",
    "datocms-client": "^0.3.36",
    "ejs": "^2.5.2",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-tag": "^0.2.1",
    "import-glob-loader": "^1.1.0",
    "marked": "^0.3.6",
    "metalsmith": "^2.3.0",
    "metalsmith-collection-metadata": "^0.1.0",
    "metalsmith-collections": "^0.9.0",
    "metalsmith-html-minifier": "^2.2.0",
    "metalsmith-if": "^0.1.1",
    "metalsmith-layouts": "^1.7.0",
    "metalsmith-markdown": "^0.2.1",
    "metalsmith-metadata": "^0.0.4",
    "metalsmith-pagination": "^1.4.0",
    "metalsmith-path": "^0.2.0",
    "metalsmith-watch": "^1.0.3",
    "node-sass": "^7.0.0",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2"
  }
}
